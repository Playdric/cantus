<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

<FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

<android.support.v7.widget.AppCompatImageView
        android:id="@+id/imv_album"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="10sp"
        android:src="@drawable/ic_album_placeholder"
        />

<TextView
        android:id="@+id/txt_album_title"
        android:layout_width="0"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imv_album"
        app:layout_constraintEnd_toStartOf="@id/btn_previous"
        app:layout_constraintBottom_toTopOf="@id/txt_album_artist"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="10sp"
        android:textAlignment="center"
        tools:text="Title here"
        app:layout_constraintTop_toTopOf="@id/imv_album"
/>

<TextView
        android:id="@+id/txt_album_artist"
        android:layout_width="0"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imv_album"
        app:layout_constraintEnd_toStartOf="@id/btn_previous"
        app:layout_constraintBottom_toBottomOf="@id/imv_album"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="10sp"
        android:textAlignment="center"
        tools:text="Artist here"
/>

<ImageButton
        android:id="@+id/btn_previous"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_play_stop"
        android:layout_marginBottom="10sp"
        android:src="@drawable/ic_previous"
/>

<ImageButton
        android:id="@+id/btn_play_stop"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_next"
        android:layout_marginBottom="10sp"
        android:src="@drawable/ic_play"
        />

<ImageButton
        android:id="@+id/btn_next"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10sp"
        android:src="@drawable/ic_next"
/>

</androidx.constraintlayout.widget.ConstraintLayout>